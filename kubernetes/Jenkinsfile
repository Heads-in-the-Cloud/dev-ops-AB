#!groovy
pipeline {
    agent any

    stages {
        stage('Up for 2min') {
            steps {
                sh "mkdir -p secrets"
                sh "echo -n ${env.DB_URL} > secrets/mysql_url.txt"
                sh "echo -n ${env.DB_USERNAME} > secrets/mysql_username.txt"
                sh "echo -n ${env.DB_PASSWORD} > secrets/mysql_password.txt"
                sh "cd kubernetes && ./up.sh"
                sh "sleep 120"
            }
        }

        stage('Down') {
            steps {
                sh "kind delete cluster --name utopia"
                sh "rm -rd secrets"
            }
        }
    }
}
